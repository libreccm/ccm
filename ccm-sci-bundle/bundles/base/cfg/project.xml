              prettyName="Scientific CMS" 
                 version="2-0-0" 
                 release="base" 
                  webxml="web-sci.xml" 
                  webapp="ROOT" 
      xsi:schemaLocation="http://ccm.redhat.com/ccm-project file:tools-ng/common/xsd/project.xsd">

  <ccm:databases>
        <ccm:database name="postgres"/>
  </ccm:databases>


