<pageLayout>
  <head>
    <title>
      <separator> : </separator>
      <showText>
        <line>layout/page/head/title</line>
      </showText>
      <usePageTitle/>    
    </title>
    <useCSSLoader/>
  </head>
  <body>
    <div id="cmsHeader">
<showImage class="logo">
	<src>images/logo.png</src>
	<alt>header/logo/alt</alt>
	<name>header/logo/name</name>
	<link>/navigation/</link>
      </showImage>
 <showCMSGreeting/>
     <showCMSGlobalNavigation>
        <usePreviewLink/>
        <useContentCenterLink/>
        <useWorkspaceLink/>
        <useHelpLink/>
        <useLogoutLink/>
      </showCMSGlobalNavigation>
     
      <showTabbedPane/>
<showBebopContextBar>
        <separator> > </separator>
      </showBebopContextBar>
    </div>
    <div id="cmsContent">

      
     <!-- <showBebopPageTitle/>-->
      <showContent>
        <usePaginatorHeader/>
        <usePaginatorNavbar/>
        <useContent/>
        <usePaginatorNavbar/>
      </showContent>
      <div class="endFloat"/>
    </div>
    <div id="cmsFooter">
        
    </div>
  </body>
</pageLayout>
