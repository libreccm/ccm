<?xml version="1.0" encoding="utf-8"?>
<content-item-layout>

    <h2>
        <content-item-title/>
    </h2>
    
    <div class="lead">
        <lead-text/>
    </div>
    
    <div class="news-date">
        <news-date>
            <format default="true">
                <iso-date/>
            </format>
            <format lang="de">
                <day zero="true"/>.<month zero="true"/>.<year/>
            </format>
        </news-date>
    </div>
    
    <div class="main">
        <main-text/>
    </div>
    
</content-item-layout>