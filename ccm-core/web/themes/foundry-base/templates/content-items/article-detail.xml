<?xml version="1.0" encoding="utf-8"?>
<content-item-layout>

    <!--<h2>
        <content-item-title/>
    </h2>-->
    
    <include file="fragments/edit-link.xml"/>
    
    <div class="lead">
        <lead-text/>
    </div>
    
    <div class="main">
        <main-text/>
    </div>
    
    <related-links>
        <ul>
            <related-link>
                <internal>
                    <li>
                        <a>
                            <related-link-title/>
                        </a>
                    </li>
                </internal>
                <external>
                    <li>
                        <a>
                            <related-link-title/>
                        </a>
                    </li>
                </external>
            </related-link>
        </ul>
    </related-links>

    <image-attachments>
    	<ul class="image-attachments">
		<image-attachment>
		<li class="image-attachment">
			<img/>
		</li>
		</image-attachment>
	</ul>
    </image-attachments>

    <file-attachments>
        <ul class="file-attachments">
            <file-attachment>
                <li class="file-attachment">
                    <a>
                        <file-name/> (<file-size/> bytes)
                    </a>
                </li>
            </file-attachment>
        </ul>
    </file-attachments>
    
</content-item-layout>
